<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleEvent">



    <TextView
        android:id="@+id/singleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:text="BIRTHDAY"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sinBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:textColor="@color/black"
        android:textStyle="bold"/>




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@+id/singleTitle"
        android:layout_margin="20dp"
        android:padding="2dp"
        android:rowCount="3"
        android:columnCount="2">

        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:padding="2dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:layout_row="0"
                android:layout_column="1"
                android:gravity="center"
                android:textSize="20dp"
                android:text="WE PLAN YOURS SPECIAL EVENTS"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65sp"
                android:padding="2dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/singleImg"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:src="@drawable/birthday" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="#151312"
                        android:textStyle="bold"
                        android:text="Venue:"/>

                    <TextView
                        android:id="@+id/singleVenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:padding="2dp"
                        android:text="chennai"
                        android:textSize="20sp"
                        android:textColor="#1E1A17"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="#E86B2C"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:text="Budget:"/>

                    <TextView
                        android:id="@+id/singleBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="20000"
                        android:padding="2dp"
                        android:textSize="20sp"
                        android:textColor="#EC8233"/>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:padding="2dp"
                        android:textColor="#151312"
                        android:textStyle="bold"
                        android:text="Design:"/>

                    <TextView
                        android:id="@+id/singleDesign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Attractive"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:textColor="#1E1A17"/>




                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </GridLayout>

</RelativeLayout>